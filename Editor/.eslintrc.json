{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "chrome": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/prefer-stateless-function": 0,
    "consistent-return": 0,
    "comma-dangle": 0,
    "spaced-comment": 0,
    "global-require": 0,
    "no-mixed-spaces-and-tabs": 2,
    "prefer-template": "error",
    "no-case-declarations" : 0,
    "no-console": 1,
    "max-len": [2,200],
    "one-var": [
      1,
      "always"
    ],
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "react/prop-types": 0,
    "react/jsx-indent-props": [2, "tab"],
    "react/jsx-indent": [2, "tab"],
    "react/jsx-no-bind": 0,
    "react/jsx-first-prop-new-line": 0,

    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved" : 0,
    "func-names": 0,
    "no-param-reassign": 0,
    "linebreak-style": ["error", "windows"]
  },
  "plugins": [
    "react"
  ]
}