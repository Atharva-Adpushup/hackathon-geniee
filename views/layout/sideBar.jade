// Modal
#addSite.modal._ap_modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
        .modal-content
            .modal-header
                button.close(id="addsite-close-btn", type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') Ã—
                h4#myModalLabel.modal-title Add Site
            form.form-inline(action='/user/addSite', method='post')
                .modal-body.addSite
                    .form-group
                        .input-group
                            span.input-group-addon
                                i.fa.fa-link
                            input#site.form-control.input-lg(type='url', value="#{unSavedSiteStr}" required=true, name='site', placeholder='For example, http://www.google.com/')
                        .error-message #{errors.site_domain}
                // Footer Section Starts Here
                .modal-footer.row
                    .col-xs-12
                        button.btn-lightBg.btn.btn-block.btn-lg(id="addsite-submit", type='submit') Add Site
if errors.site_domain
    script(type='text/javascript').
        $(function(){
            $("#addSite").modal('show');
        });

script(type='text/javascript').
    $("#site").off('change').on('change', function() {
        if ((this.value.indexOf("http://") !== 0) && (this.value.indexOf("https://") !== 0)) {
            this.value = "http://" + this.value;
        }
    });
