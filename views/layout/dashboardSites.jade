for site in validSites
    - siteId = site.siteId;

    .mb-30
        .controlAdpushupWrap
            if site.channels.length
                h3.title.m-All-0.clearfix
                    a.pull-left(id="site-report-" + siteId, target='_blank', title='Showing last 7 days ControlVsAdPushup reports.', href='/user/site/#{siteId}/reports/ControlVsAdpushupCtr').
                        #{utils.domanize(site.domain)} - #{siteId}
                    .pull-right.site-actions
                        a.btn.btn-lightBg.btn-default(id="editor-redirect-link", target='_blank', href='/user/site/#{siteId}/editor') 
                            i.fa.fa-code
                            |  Take to Editor
                        a.btn.btn-lightBg.btn-default(id="site-custom-reports-" + siteId, href='/user/site/#{siteId}/reports/adpushupReport')
                                i.fa.fa-area-chart
                                |  AdPushup Report
                        a.btn.btn-lightBg.btn-default(id="pagegroups-link", href='/user/site/#{siteId}/pagegroups')  
                            i.fa.fa-th-list
                            |  PageGroups
                        a.btn.btn-lightBg.btn-default(id="settings-link", href='/user/site/#{siteId}/settings') 
                            i.fa.fa-cog
                            |  Settings
                        if isSuperUser
                            a.btn.btn-lightBg.btn-default(id="opspanel-link", href='/user/site/#{siteId}/opsPanel') 
                                i.fa.fa-wrench 
                                |  Ops Panel
                            form(action='/user/deleteSite', method='post', style='display: inline', onsubmit="return (confirm('Are you sure you want to delete this site? This step cannot be reversed !') && trackDelete(#{siteId}))")
                                input(type='hidden', name='siteId', value='#{siteId}')
                                input(type='hidden', name='siteDomain', value='#{site.domain}')
                                button.btn.btn-lightBg.btn-default(id="site-delete-btn", type='submit') Delete Site

                - siteDomain = (site.domain) ? site.domain : "";
                .graph.dashboardgraph
                    div(id='controlVsAdpushupChart_#{siteId}', style='overflow: hidden;')
