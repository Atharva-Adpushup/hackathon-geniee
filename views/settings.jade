extends  layout/base

block getTitle
    - var titleVar = "Settings"

block append headScripts
    +loadAsset("js", [
        '/assets/js/libs/custom/settings.js',
    ])    

block bodyContent
    include layout/sideBar
    .pageContainer.page-container
        include layout/header
        // Page Content Starts Here
        .pageContentWrapper.page-content
            .pageContentInner.page-content--inner
                .notification-wrapper
                #widgetsArea.row
                    .mb-30
                        .controlAdpushupWrap
                            h3.title.m-All-0.clearfix 
                                a Site settings - #{utils.domanize(siteDomain)}
                            form#saveSiteSettings.settings-pane
                                .row
                                    .col-sm-6
                                        if !pageGroups.length
                                            | No Pagegroups found!
                                        else
                                            .row
                                                .col-sm-12
                                                    h4 Pagegroup pattern
                                        for p in pageGroups
                                            .row
                                                .col-sm-4
                                                    .input-name!= p.pageGroup
                                                    input(type="hidden" name="pageGroupPattern" value=p.pageGroup)
                                                .col-sm-8
                                                    input.form-control(value=utils.getPageGroupPattern(p.pageGroup, patterns) name="pageGroupPattern" type="text" placeholder="Enter pagegroup pattern")
                                    .col-sm-6
                                        .row
                                            .col-sm-12
                                                h4 Other Settings
                                        .row
                                            .col-sm-5
                                                .input-name Adpushup Percentage
                                            .col-sm-7
                                                input.form-control(value=(apConfigs.adpushupPercentage ? apConfigs.adpushupPercentage : 100) name="adpushupPercentage" type="number" min="0" max="100" placeholder="Enter Adpushup Percentage")
                                        .row
                                            .col-sm-5
                                                .input-name Heart Beat Min Interval
                                            .col-sm-7
                                                input.form-control(value=(apConfigs.heartBeatMinInterval ? apConfigs.heartBeatMinInterval : 30000) name="heartBeatMinInterval" type="number" placeholder="Enter Heart Beat Min Interval")
                                        .row
                                            .col-sm-5
                                                .input-name Heart Beat Start Delay
                                            .col-sm-7
                                                input.form-control(value=(apConfigs.heartBeatStartDelay ? apConfigs.heartBeatStartDelay : 2000) name="heartBeatStartDelay" type="number" placeholder="Enter Heart Beat Start Delay")
                                        .row
                                            .col-sm-5
                                                .input-name X Path Wait Timeout
                                            .col-sm-7
                                                input.form-control(value=(apConfigs.xpathWaitTimeout ? apConfigs.xpathWaitTimeout : 5000) name="xpathWaitTimeout" type="number" placeholder="Enter X Path Wait Timeout")
                                         .row
                                            .col-sm-5
                                                .input-name Auto Optimise
                                            .col-sm-7
                                                input(type="checkbox" id="autoOptimise" name="autoOptimise" value=(apConfigs.autoOptimise === "true" ? "true" : "false") checked=(apConfigs.autoOptimise === "true" ? "true" : undefined))
                                hr
                                .row
                                    .col-sm-3
                                        button.btn-primary Save Settings
                                

