    script.
        $(document).ready(function() {
            var offset = null;
            $(window).scroll(function(e){ 
                var elOffset = $('.docked-ad').offset().top;
                    offset = !offset ? elOffset : offset;
                
                if ($(this).scrollTop() > offset){ 
                    $('.docked-ad').css({'position': 'fixed', 'top': '0px'}); 
                }
                if ($(this).scrollTop() < offset)
                {
                    $('.docked-ad').css({'position': 'static', 'top': '0px'}); 
                } 
            });
        });




                            

    
   
