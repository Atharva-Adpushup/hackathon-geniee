block bodyContent
	div(class="errorMain thankyouMain")
		- isRequestDemo =  isUserRequestDemo || (currentUser && currentUser.requestDemo);
		if (isRequestDemo)
			a(class="btn btn-lightBg greeting-logout-btn", href="/user/logout") Logout

		div(class="container")
			div(class="row")
				div(class="col-sm-12")
					h1(class="thanku")
					| Thank you for signing up with AdPushup
					img(src="/assets/images/smily-white.png")

					section(class="txt")
						h4 We are a 
							strong Google AdSense certified partner 
							| and backed by 
							strong Microsoft Ventures.
			p We're currently in beta and seeing great success so far with 
				strong average RPM/eCPM uplifts of greater than 70 percent on participating website, without compromising on the user experience. 
				| However, this is a closed beta program and we're on-boarding select few users, using assisted setups.

			p Please check your email and suggest a suitable time for a 
				strong 15 minute 
				| screen share. During this session, we will install AdPushup on your website and show you how to use AdPushup.

	div(class="clickhere")
		| Click here to chat with us
		img(src="/assets/images/animatedRightArrow.gif")
	div(class="intercom-launcher")

	- userAboard = userAboard || {};
	// Intercom user secure mode Hash
	- intercomHash = utils.getHmacSHA256(userAboard.email, consts.analytics["INTERCOM_ID"]);
	if environment == "production"
		script(type="text/javascript").
			var userAboard = !{JSON.stringify(userAboard)},
				intercomHash = '#{intercomHash}',
				intercomObj = {
					Intercom: {
						user_hash: intercomHash
					}
				};

			if (Object.keys(userAboard).length > 0 && userAboard.isIdentified) {
				analytics.alias(userAboard.email);
				analytics.identify(userAboard.email, userAboard.analytics, intercomObj);
				analytics.track('App-signup-completion', {
					name: userAboard.firstName,
					email: userAboard.email
				}, intercomObj);
			}

			analytics.page("App-thankyou", intercomObj);