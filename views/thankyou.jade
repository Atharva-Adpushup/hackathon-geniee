block bodyContent
	- primarySiteId = user.primarySiteId || null;
	- primarySiteDomain = user.primarySiteDomain || null;
	- primarySiteStep = user.primarySiteStep || null;
	- operationToolsPath = 'http://console.adpushup.com/tools?siteId=' + primarySiteId;

	style.
		.thankyouWrapper {
			width: 100%;
			height: 100%;
		}
		.thankyouWrapper .container {
			padding: 60px 0;
			margin-top: 60px;
		}
		.thankyouWrapper .container .row {
			padding: 15px;
			background: #ffffff;
			box-shadow: 0 0.5px 0 0 #ffffff inset, 0 1px 2px 0 #B3B3B3;
		}
		.thankyou-img img {
			width: 90%;
		}
		.thankyou-content {
			padding: 20px 0px;
		}
		.thankyou-content {
			font-size: 16px;
		}
		.thankyou-content ul {
			padding: 20px 0px;
		}
		.thankyou-content ul li {
			display: inline;
			padding: 10px;
			border: 2px solid #cf474b;
			color: #cf474b;
			margin-right: 10px;
			font-weight: bold;
		}
		.thankyou-content ul li:hover {
			background: #cf474b;
			color: #fff;
		}
	.thankyouWrapper
		include layout/header
		.container.text-center
			.row
				.pull-right.col-lg-2.visible-lg.visible-md.mT-10
					a.apbtn-danger(id="sidebar-logout-link", href='/user/dashboard') Dashboard
			.row
				.col-md-5.thankyou-img
					img(src="assets/images/completion_graphic.png")
