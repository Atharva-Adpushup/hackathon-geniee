                                        //-         i.fa.fa-pause-circle-o
                                        //-         | Pause AdPushup
                                        li.pull-right.data-row-action
                                            a(href="/user/site/#{siteId}/editor") 
                                                i.fa.fa-file-code-o
                                                | Ad Editor
                                    .tab-content
                                        #summary.tab-pane.fade.in.active(role='tabpanel', style="padding: 20px;") 
                                            .data-row
                                                h5.data-font-m.text-dark Basic Information
                                                .row
                                                    .col-sm-3
                                                        label.data-font-m Page Group URL
                                                    .col-sm-9
                                                        a(href="#{pageGroup.sampleUrl}", target="_blank", class="data-font-m sampleUrl")!= pageGroup.sampleUrl
                                                .row
                                                    .col-sm-3
                                                        label.data-font-m Platform
                                                    .col-sm-9
                                                        .data-font-m.text-dark.device
                                                            if pageGroup.device === 'DESKTOP' 
                                                                i.fa.fa-desktop 
                                                                span!= pageGroup.device
                                                            if pageGroup.device === 'TABLET' 
                                                                i.fa.fa-tablet 
                                                                span!= pageGroup.device
                                                            if pageGroup.device === 'MOBILE' 
                                                                i.fa.fa-mobile 
                                                                span!= pageGroup.device
                                                .row
                                                    .col-sm-3
                                                        label.data-font-m Inventory Type
                                                    .col-sm-9
                                                        .data-font-m.text-dark Standard Banner Ads
                                            
