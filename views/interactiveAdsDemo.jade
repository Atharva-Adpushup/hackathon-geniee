    script.
        $(document).ready(function(){$("input").on("change",function(){var e=[],t=$("input"),n=$(".format");if($(t).each(function(t,n){$(n).is(":checked")&&e.push(n.value)}),e.length){var o=[],a=[];e.forEach(function(e){$(n).each(function(t,n){$(n).attr("data-filter").includes(e)?o.push(n):a.push(n)})}),$(a).each(function(e,t){$(t).fadeOut()}),$(o).each(function(e,t){$(t).fadeIn()})}}),$(".format").on("click",function(){var e=$(this).attr("data-format");$(".format").hide(),$("#formats-list").hide(),$("#"+e).show(),$(".desktop-frame").show(),$(".mobile-frame").hide()}),$(".demo-back").on("click",function(){$(".format").show(),$("#formats-list").show(),$(".demo-pane").hide()}),$(".desktop-preview-btn").on("click",function(){$(".desktop-frame").show(),$(".mobile-frame").hide()}),$(".mobile-preview-btn").on("click",function(){$(".mobile-frame").show(),$(".desktop-frame").hide()}),$(".fullscreen-btn").on("click",function(){var e=$(this).attr("data-format");document.getElementById(e).requestFullscreen&&document.getElementById(e).requestFullscreen()})});


                            

    
   
