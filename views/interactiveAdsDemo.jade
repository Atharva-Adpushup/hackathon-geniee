                        | Docked
                        button.demo-back
                            i.fa.fa-chevron-left
                            | Back
                    .preview-pane
                        i.fa.fa-arrows
                        span.fullscreen-btn(data-format="docked") Fullscreen
                        i.fa.fa-desktop
                        span.desktop-preview-btn Desktop preview
                        i.fa.fa-mobile
