//- Report interface

extends layout/base

block getTitle
	- var titleVar = "Report"	

block append headScripts
	script.
		window.pageGroups = !{JSON.stringify(pageGroups)}
		window.siteId = !{siteId}
		window.siteDomain = "#{siteDomain}"
		window.isSuperUser = !{isSuperUser}

block append headCss
	style.
		.loaderwrapper.spinner {
			top: 0;
			left: 0;
		}

block bodyContent
	include layout/sideBar
	.pageContainer.page-container
		include layout/header
		.pageContentWrapper.page-content
			.pageContentInner.page-content--inner
				.loaderwrapper.spinner
					img(src="/assets/images/loaderLogo.png")
				#reportingPanel

	script(src="/assets/js/builds/reportingPanel.js?v=1511363540148")
