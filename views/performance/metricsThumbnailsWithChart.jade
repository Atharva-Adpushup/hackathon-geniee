            button(id="thumbnail-info-btn", data-animation="true", class="btn btn-default btn--transparent btn--icon js-thumbnail-info-btn", type="button", data-placement="top", data-title="Page click through rate (CTR) is the ratio of the number of ad clicks to the number of page views (in thousand).")
