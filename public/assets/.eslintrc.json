{
  "parser": "babel-eslint",
  "extends": "eslint-config-airbnb-es5",
  "globals": {
    "chrome": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": false
  },
  "rules": {
    "consistent-return": 0,
    "comma-dangle": 0,
    "spaced-comment": 0,
    "global-require": 0,
    "no-mixed-spaces-and-tabs": 2,
    "no-case-declarations" : 0,
    "no-console": 1,
    "max-len": [2,200],
    "one-var": [
      1,
      "always"
    ],
    "indent": [
      "error",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "func-names": 0,
    "no-param-reassign": 0,
    "linebreak-style": ["error", "unix"]
  }
}